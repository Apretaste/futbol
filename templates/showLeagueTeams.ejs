<div class="row">
    <div class="col l12 m12 x12 s12">
        <h1><%= titulo %></h1>
    </div>
</div>

<% if (equipo.toLowerCase() == "todos") { %>
    <div class="row">
        <div class="col l12 m12 x12 s12">
            <table style="text-align:center" width="100%" class="table">
                <tr>
                    <!--<th><h2>crestUrl</th>-->
                    <th>Nombre</th>
                    <!--<th><h2>code</th>-->
                    <th>Nombre Corto</th>
                    <th>Stadium</th>
                </tr>
                <% for(var i = 0; i < equipos.length; i++) {
                    var team = equipos[i]; %>
                <tr>
                        <td><b><a href="#!" onclick="apretaste.send({command: 'FUTBOL EQUIPO', data: {payload: liga.payload.id, team: team.id}});"><%= team.name %></a></b></td>
                        <td><%= team.shortName %></td>
                        <td><%= team.venue %></td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col l12 m12 x12 s12">
            <table style="text-align:center;" width="100%">
                <tr>
                    <td style="" colspan="1">
                        <a class="btn" href="#!" onclick="apretaste.send({command: 'FUTBOL LIGA', data: {payload: liga.payload.id, team: team.id}});">Ver Liga</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
<% } else { %>
    <div class="row">
        <div class="col l12 m12 x12 s12">
            <table style="text-align:center" width="100%">
                <tr>
                    <th colspan="2"><img src="{{APP_IMAGE_PATH}}/<%= imgTeam %>" alt="TeamLogo" width="100px" height="130px" /></th>
                </tr>
                <!--<tr>
                    <td colspan="2"><h2><b><%= equipos._payload.name %></b></h2></td>
                </tr>-->
                <tr>
                    <th><h2>Nombre Corto</h2></th>
                    <th><h2>Stadium</h2></th>
                </tr>
                <tr>
                    <td><%= equipos._payload.shortName %></td>
                    <td><%= equipos._payload.venue %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col l12 m12 x12 s12">
	        <h2>Jugadores del <%= equipos._payload.name %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col l12 m12 x12 s12">
            <table style="text-align:center" width="100%" class="table">
                <tr>
                    <th><h2>Nombre</h2></th>
                    <th><h2>Posici&oacute;n</h2></th>
                    <!--<th><h2># Camiseta</h2></th>-->
                    <th><h2>Fecha de Nacimiento</h2></th>
                </tr>
                <% for(var i = 0; i < equipos._payload.squad.length; i++) {
                    var player = equipos._payload.squad[i]; %>
                <tr>
                        <td><b><%= player.name %></b></td>
                        <td><%= player.position %></td>
                    <!--<td><%= player.jerseyNumber %></td>-->
                        <td><%= formatDate(player.dateOfBirth) %></td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col l12 m12 x12 s12">
        	<h2>Partidos en casa del <%= equipos._payload.name %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col l12 m12 x12 s12">
            <table style="text-align:center" width="100%" class="table">
                <tr>
                    <th><h2>Fecha</h2></th>
                    <th><h2>Local</h2></th>
                    <th><h2></h2></th>
                    <th><h2>Visitante</h2></th>
                    <th colspan="3"><h2>Resultado</h2></th>
                </tr>
                <% for(var i = 0; i < juegosHome.length; i++) {
                    var juego = juegosHome[i]; %>
                <tr>
                        <td><%= formatDate(juego.utcDate) %></td>
                        <td><b><%= juego.homeTeam.name %></b></td>
                        <td>-</td>
                        <td><%= juego.awayTeam.name %></td>
                        <td><b><%= juego.score.fullTime.homeTeam %></b></td>
                        <td>:</td>
                        <td><%= juego.score.fullTime.awayTeam %></td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col l12 m12 x12 s12">
        	<h2>Partidos de visitante del <%= equipos._payload.name %></h2>
        </div>
    </div>
    <div class="row">
        <div class="col l12 m12 x12 s12">
            <table style="text-align:center" width="100%" class="table">
                <tr>
                    <th><h2>Fecha</h2></th>
                    <th><h2>Local</h2></th>
                    <th><h2></h2></th>
                    <th><h2>Visitante</h2></th>
                    <th colspan="3"><h2>Resultado</h2></th>
                </tr>
                <% for(var i = 0; i < juegosAway.length; i++) {
                    var juego = juegosAway[i]; %>
                <tr>
                        <td><%= formatDate(juego.utcDate) %></td>
                        <td><%= juego.homeTeam.name %></td>
                        <td>-</td>
                        <td><b><%= juego.awayTeam.name %></b></td>
                        <td><%= juego.score.fullTime.homeTeam %></td>
                        <td>:</td>
                        <td><b><%= juego.score.fullTime.awayTeam %></b></td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col l12 m12 x12 s12">
            <table style="text-align:center;" width="100%">
                <tr>
                    <td style="" colspan="1">
                        <a class="btn" href="#!" onclick="apretaste.send({command: 'FUTBOL EQUIPO', data:{payload: liga.payload.id, team: 'TODOS'}});">Ver Equipos</a>
                    </td>
                    <td style="" colspan="1">
                        <a class="btn" href="#!" onclick="apretaste.send({command: 'FUTBOL LIGA', data:{payload: liga.payload.id}});">Ver Liga</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
<% } %>
