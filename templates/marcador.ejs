<div style="background-image: url('{{APP_SERVICE_PATH}}/images/CL.png')" class="bg"></div>

<div class="row">
	<div class="col s12">
		<h1>Champion's league</h1>

		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'FUTBOL RESULTADOS', data:{id:'<%= league %>'}})">Resultados</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'FUTBOL SIGUIENTES', data:{id:'<%= league %>'}})">Siguientes</a></li> 
			<li class="tab disabled"><a class="active" href="#">Marcador</a></li>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<table class="table striped centered" border="1">
			<thead>
				<tr>
					<th></th>
					<th class="left">Equipo</th>
					<th>W/L/D</th>
					<th>PP</th>
					<th>GF/GA</th>
					<th>DIF</th>
				</tr>
			</thead>
			<tbody>
				<% standings.forEach(function(std) { %>
				<tr>
					<td>#<%= std.position %></td>
					<td class="left"><a href="#!" onclick="apretaste.send({command:'FUTBOL EQUIPO', data:{id:'<%= std.teamId %>'}})"><%= std.teamName %></a></td>
					<td><%= std.won %>/<%= std.lost %>/<%= std.draw %></td>
					<td><%= std.points %></td>
					<td><%= std.goalsFor %>/<%= std.goalsAgainst %></td>
					<td><%= std.goalDiff %></td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</div>

<div class="bottom-space"></div>

<!-- back floating button -->
<div class="fixed-action-btn">
	<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.send({'command':'FUTBOL'})">
		<i class="material-icons">arrow_back</i>
	</a>
</div>