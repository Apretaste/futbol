<div style="background-image: url('{{APP_SERVICE_PATH}}/images/<%= league.leagueCode %>.png')" class="bg"></div>

<div class="row">
	<div class="col s4">
		<img class="league-seal" src="{{APP_SERVICE_PATH}}/images/<%= league.leagueCode %>.png">
	</div>
	<div class="col s8">
		<h1><%= league.leagueName %></h1>
		<p>
			<% if(league.countryCode) { %>
				<img class="flag" src="{{APP_RESOURCES}}/images/flags/<%= league.countryCode %>.png"/>
			<% } %>
			<%= league.countryName %><br>
			<%= seasonStart %> al <%= seasonEnd %><br>
			Día #<%= day %>
		</p>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'FUTBOL RESULTADOS', data:{id:'<%= league.leagueCode %>'}})">Resultados</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'FUTBOL SIGUIENTES', data:{id:'<%= league.leagueCode %>'}})">Próximos</a></li> 
			<li class="tab disabled"><a class="active" href="#">Marcador</a></li>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<table class="table striped centered" border="1">
			<thead>
				<tr>
					<th></th>
					<th class="left">Equipo</th>
					<th>W/L/D</th>
					<th>PP</th>
					<th>GF/GA</th>
					<th>DIF</th>
				</tr>
			</thead>
			<tbody>
				<% standings.forEach(function(std) { %>
				<tr>
					<td>#<%= std.position %></td>
					<td class="left"><a href="#!" onclick="apretaste.send({command:'FUTBOL EQUIPO', data:{id:'<%= std.teamId %>'}})"><%= std.teamName %></a></td>
					<td><%= std.won %>/<%= std.lost %>/<%= std.draw %></td>
					<td><%= std.points %></td>
					<td><%= std.goalsFor %>/<%= std.goalsAgainst %></td>
					<td><%= std.goalDiff %></td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<h2>Leyenda</h2>

		<table class="table">
			<tbody>
			<tr>
				<td class="head">W</td>
				<td>Ganados</td>
				<td class="head">L</td>
				<td>Perdidos</td>
			</tr>
			<tr>
				<td class="head">D</td>
				<td>Empatados</td>
				<td class="head">PP</td>
				<td>Puntos</td>
			</tr>
			<tr>
				<td class="head">GL</td>
				<td>Golas dados</td>
				<td class="head">GF</td>
				<td>Goals recibidos</td>
			</tr>
			<tr>
				<td class="head">DIF</td>
				<td>Diferencia</td>
				<td class="head"></td>
				<td></td>
			</tr>
			</tbody>
		</table>
	</div>
</div>

<div class="bottom-space"></div>

<!-- back floating button -->
<div class="fixed-action-btn">
	<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.send({'command':'FUTBOL'})">
		<i class="material-icons">arrow_back</i>
	</a>
</div>