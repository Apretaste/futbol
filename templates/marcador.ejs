<div class="row">
	<div class="col s12 center-align">
		<img src="{{APP_SERVICE_PATH}}/images/<%= league.leagueCode %>.jpg">
	</div>
</div>

<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'FUTBOL RESULTADOS', data:{id:'<%= league.leagueCode %>'}})">Resultados</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'FUTBOL SIGUIENTES', data:{id:'<%= league.leagueCode %>'}})">Próximos</a></li> 
			<li class="tab"><a class="active" href="#">Marcador</a></li>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<% if(standings.length) { %>
			<table class="table striped" border="1">
				<thead>
					<tr>
						<th></th>
						<th>Equipo</th>
						<th>W/L/D</th>
						<th>PP</th>
						<th>GF/GA</th>
						<th>DIF</th>
					</tr>
				</thead>
				<tbody>
					<% standings.forEach(function(std) { %>
						<tr>
							<td>#<%= std.position %></td>
							<td class="left-align"><a href="#!" onclick="apretaste.send({command:'FUTBOL EQUIPO', data:{id:'<%= std.teamId %>'}})"><%= std.teamName %></a></td>
							<td><%= std.won %>/<%= std.lost %>/<%= std.draw %></td>
							<td><%= std.points %></td>
							<td><%= std.goalsFor %>/<%= std.goalsAgainst %></td>
							<td><%= std.goalDiff %></td>
						</tr>
					<% }) %>
				</tbody>
			</table>

			<span class="chip tiny"><b>W</b> Ganados</span>
			<span class="chip tiny"><b>L</b> Perdidos</span>
			<span class="chip tiny"><b>D</b> Empatados</span>
			<span class="chip tiny"><b>PP</b> Puntos</span>
			<span class="chip tiny"><b>GL</b> Golas dados</span>
			<span class="chip tiny"><b>GF</b> Goals recibidos</span>
			<span class="chip tiny"><b>DIF</b> Diferencia</span>
		<% } else { %>
			<p class="middle-center grey-text center-align">El marcador está en blanco ¿Quizás la liga aún no ha empezado? Revise nuevamente en los próximos días.</p>
		<% } %>
	</div>
</div>

<div class="bottom-space"></div>

<!-- back floating button -->
<div class="fixed-action-btn">
	<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.send({'command':'FUTBOL'})">
		<i class="material-icons">arrow_back</i>
	</a>
</div>
