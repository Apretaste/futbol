<div class="row">
	<div class="col l12 s12 x12">
	<h1>Ligas de Futbol</h1>
		<% for(var i = 0; i < ligas.length; i++) { var liga = ligas[i]; %>
		<div class="card horizontal">
		  <div class="card-image">
			<img class="league-logo" src = "{{APP_SERVICE_PATH}}/images/<%= liga.code %>.png" width="100" />
		  </div>
		  <div class="card-stacked">
			<div class="card-content">
			  <h3><a href="#!" onclick="apretaste.send({command:'FUTBOL LIGA', data:{query: ligas[<%= i %>].id}});"><%= liga.name %></a></h3>
			</div>
			<div class="card-action">
			  <a href = "#!" onclick="apretaste.send({command: 'FUTBOL JORNADA', data: {query: ligas[<%= i %>].id, currentMatchDay: ligas[<%= i %>].currentSeason.currentMatchday}})">Jornada <%= liga.currentSeason.currentMatchday %></a>
			</div>
		  </div>
		</div>
		<% } %>
	</div>
</div>

